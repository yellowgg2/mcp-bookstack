{
  "name": "mcp-bookstack",
  "version": "1.2.0", // Version erhöht
  "main": "build/main.js", // Auf neue Struktur angepasst
  "type": "module",
  "bin": {
    "mcp-bookstack": "./build/main.js" // Auf neue Struktur angepasst
  },
  "files": [
    "build",
    "locales" // Falls i18n hinzugefügt wird
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/main.js', '755')\"", // Passe Pfad im chmod an
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/main.js", // Passe Pfad an
    "start": "node build/main.js" // Passe Pfad an
  },
  "author": "",
  "license": "MIT",
  "description": "MCP Server for BookStack with content generation features",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5" // Abhängigkeit hinzugefügt
  },
  "devDependencies": {
    "@types/node": "^20.14.0", // Node 20 statt 22 für breitere Kompatibilität?
    "typescript": "^5.8.3" // Mind. 5.x für neuere Features
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "bookstack"
  ]
